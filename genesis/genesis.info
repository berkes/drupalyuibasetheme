; configuration page. This is useful for suppressing check boxes for elements 
; not used by your theme.
 
	 features[] = logo
  features[] = name
  features[] = slogan
  features[] = mission
  features[] = node_user_picture
  features[] = comment_user_picture
  features[] = search
  features[] = favicon
  features[] = primary_links
  features[] = secondary_links

